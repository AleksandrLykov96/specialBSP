// Количество секунд в сутках
// 
// Параметры:
//  КоличествоСуток - Число
// 
// Возвращаемое значение:
//  Число
//
Функция СекундВСутках(Знач КоличествоСуток = 1) Экспорт
	
	Возврат КоличествоСуток * 86400;
	
КонецФункции

// Количество минут в сутках
// 
// Параметры:
//  КоличествоСуток - Число
//  
// Возвращаемое значение:
//  Число
//
Функция МинутВСутках(Знач КоличествоСуток = 1) Экспорт

	Возврат КоличествоСуток * 1440;

КонецФункции

