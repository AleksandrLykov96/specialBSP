// Структура параметров отправки E-Mail.
// 
// Возвращаемое значение:
//  ФиксированнаяСтруктура - Структура параметров для отправки E-Mail:
// * АдресСервераPOP3 - Строка - Адрес сервера POP3
// * АдресСервераSMTP - Строка - Адрес сервера SMTP
// * ПарольEMail - Строка - Пароль доступа к почтовому ящику
// * ПарольSMTP - Строка - Пароль доступа к SMTP
// * ПодписьПисьмаEMail - Строка - Подпись письма (будет добавлена автоматически)
// * ПользовательSMTP - Строка - Имя пользователя SMTP
// * ПользовательEMail - Строка - Имя пользователя почтового ящика
// * ПортPOP3 - Число - Порт POP3
// * ПортSMTP - Число - Порт SMTP
// * ТаймаутОтправкиEMail - Число - Таймаут отправки Email сообщения
//
Функция ПолучитьСтруктуруПараметровОтправкиEMail() Экспорт
	
	СтруктураПараметров = Новый Структура();
	
	СтруктураПараметров.Вставить("АдресСервераPOP3"     , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.АдресСервераPOP3     , ""));
	СтруктураПараметров.Вставить("АдресСервераSMTP"     , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.АдресСервераSMTP     , ""));
	СтруктураПараметров.Вставить("ПарольEMail"          , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ПарольEMail          , ""));
	СтруктураПараметров.Вставить("ПарольSMTP"           , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ПарольSMTP           , ""));
	СтруктураПараметров.Вставить("ПодписьПисьмаEMail"   , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ПодписьПисьмаEMail   , ""));
	СтруктураПараметров.Вставить("ПользовательSMTP"     , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ПользовательSMTP     , ""));
	СтруктураПараметров.Вставить("ПользовательEMail"    , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ПользовательEMail    , ""));
	СтруктураПараметров.Вставить("ПортPOP3"             , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ПортPOP3             , 110));
	СтруктураПараметров.Вставить("ПортSMTP"             , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ПортSMTP             , 25));
	СтруктураПараметров.Вставить("ТаймаутОтправкиEMail" , Спец_ПолучитьКонстанту(ПланыВидовХарактеристик.Спец_Константы.ТаймаутОтправкиEMail , Спец_КонстантыКлиентСервер.СекундВМинуте()));
	
	//@skip-check constructor-function-return-section
	Возврат Новый ФиксированнаяСтруктура(СтруктураПараметров);
	
КонецФункции

#КонецОбласти
