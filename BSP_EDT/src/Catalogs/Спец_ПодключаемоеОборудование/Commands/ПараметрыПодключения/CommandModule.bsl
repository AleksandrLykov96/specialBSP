	//@skip-check invocation-parameter-type-intersect
	ОткрытьФорму("Справочник.Спец_ПодключаемоеОборудование.Форма.ФормаНастройки",
			Новый Структура("ПодключаемоеОборудование", ПараметрКоманды),
			ПараметрыВыполненияКоманды.Источник,
			ПараметрыВыполненияКоманды.Уникальность,
			ПараметрыВыполненияКоманды.Окно,
			ПараметрыВыполненияКоманды.НавигационнаяСсылка,
			Новый ОписаниеОповещения("ПослеНастройкиПараметровПодключения", ЭтотОбъект, ПараметрыВыполненияКоманды.Источник));
	
